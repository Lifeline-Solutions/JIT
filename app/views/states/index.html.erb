<h1>Listing states</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @states.each do |state| %>
  <tr>
    <td><%= state.name %></td>
    <td><%= link_to 'Show', [state.donation, state] %></td>
    <td><%= link_to 'Edit', edit_donation_state_path(state.donation, state) %></td>
    <td><%= link_to 'Destroy', [state.donation, state], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

